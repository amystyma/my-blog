<% @posts.each do |post| %>
<article>
  <header>
    <h1 class="post-title"><%= post.title %></h1>
    <div class="date-time"><time datetime="post.created_at">
      <%= post.created_at.strftime('%a %b %e %Y at %r') %>
    </time></div>
  </header>
  <div class="post-body"> 
    <%= simple_format(truncate_html(post.body, :length => 215)).html_safe %>
  </div>
  <h3 class="link"><%= link_to 'Read more...', post %></h3>
  <hr style="opacity: 0.1;">
</artice>
<% end %>